<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_notice_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".group.detail.GroupSchedule_detail">

    <View
        android:id="@+id/frame_layout_notice_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/blue_round_bk"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/group_notice_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="#4B9AC8"
                android:src="@drawable/return_white_icon" />

            <ImageButton
                android:id="@+id/group_notice_search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="285dp"
                android:background="#4B9AC8"
                android:src="@drawable/search_white_icon" />

            <ImageButton
                android:id="@+id/group_notice_write_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="#4B9AC8"
                android:src="@drawable/edit_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/group_detail_notice_en_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="NOTICE"
            android:textColor="#7AFFFFFF"
            android:textSize="11sp"
            android:textStyle="bold"
            android:transitionName="notice_en_transition" />

        <TextView
            android:id="@+id/group_detail_notice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="공지사항"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:transitionName="notice_transition" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/group_detail_notice_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp" />

</FrameLayout>