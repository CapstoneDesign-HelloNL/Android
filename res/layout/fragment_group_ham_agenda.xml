<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F0F2"
    android:orientation="vertical"
    tools:context=".group.detail.GroupSchedule_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/group_ham_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/group_ham_agenda_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:src="@drawable/return_icon" />

            <Button
                android:id="@+id/group_ham_agenda_send_btn"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="330dp"
                android:background="#ffffff"
                android:paddingTop="1dp"
                android:text="보내기"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="25dp"
                android:text="마음의 소리함"
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold"
                android:transitionName="gallery_transition" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginTop="10dp"
                android:text="익명으로 관리자에게 전달됩니다." />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp">

        <EditText
            android:id="@+id/group_ham_agenda_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="무슨 말을 하고 싶은가요?"
            android:background="#F1F0F2" />
    </ScrollView>
</LinearLayout>