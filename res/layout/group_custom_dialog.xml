<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/custom_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp">

        <ImageButton
            android:id="@+id/dialog_cancel_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/dialog_cancel" />

        <ImageButton
            android:id="@+id/dialog_complete_btn"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginLeft="280dp"
            android:background="@drawable/dialog_complete" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/dialog_title_et"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/dialog_et_edge"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/dialog_content_et"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/dialog_et_edge"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>