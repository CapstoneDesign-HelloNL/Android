<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_select_layout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.github.mmin18.widget.RealtimeBlurView
        android:id="@+id/realtime_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:realtimeBlurRadius="10dp"
        app:realtimeOverlayColor="#A70E8D81" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="240dp">

        <TextView
            android:id="@+id/group_select_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NL"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold" />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/group_select_img"
                android:layout_width="70dp"
                android:layout_height="75dp"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:src="@drawable/group_img" />

            <TextView
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:text="개설일 : "
                android:textColor="#99E8E8E8"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/group_select_date"
                android:layout_column="1"
                android:layout_marginLeft="60dp"
                android:text="yyyy-mm-dd"
                android:textColor="#99E8E8E8"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/group_select_school"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="서울과학기술대학교"
                android:textStyle="bold"
                android:textColor="#ffffff" />

            <TextView
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:text="동아리"
                android:textStyle="bold"
                android:textColor="#ffffff" />

        </GridLayout>

        <Button
            android:id="@+id/group_select_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="130dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/buttonshape_gray"
            android:padding="20dp"
            android:text="취소"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/group_select_request_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/buttonshape"
            android:padding="20dp"
            android:text="가입요청"
            android:textColor="#ffffff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</FrameLayout>